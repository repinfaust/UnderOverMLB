# API Keys - Only using free APIs
ODDS_API_KEY=your_odds_api_key_here
WEATHER_API_KEY=your_weather_api_key_here
# MLB Stats API is free and requires no key

# Server Configuration
MCP_LOG_LEVEL=info
MAX_CONCURRENT_PREDICTIONS=3
CACHE_TTL_MINUTES=30
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Database Configuration (optional)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mlb_predictions
DB_USER=mlb_user
DB_PASSWORD=your_password_here

# Monitoring
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=300000

# Node Environment
NODE_ENV=development
PORT=3000

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_FILE=data/logs/mlb-predictions.log

# Prediction Settings
DEFAULT_CONFIDENCE_THRESHOLD=0.65
MAX_PREDICTION_AGE_HOURS=24
ENABLE_BACKTESTING=true

# Betting Settings
MAX_BET_SIZE_PERCENTAGE=5
KELLY_CRITERION_FACTOR=0.25
MINIMUM_EDGE_THRESHOLD=0.3